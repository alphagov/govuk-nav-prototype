<% if taxon.tagged_content.any? %>
  <ul class="subsection-list">
    <% taxon.tagged_content.each do |content_item| %>
      <li class="subsection-list-item">
        <%= link_to(content_item.title, content_item.base_path) %>

        <p><%= content_item.description %></p>
      </li>
    <% end %>
  </ul>
<% end %>
<% taxon.child_taxons.each do |child_taxon| %>
  <h3><%= child_taxon.title %></h3>
  <ul class="subsection-list-item">
    <% child_taxon.tagged_content.each do |content_item| %>
      <li class="subsection-list-item">
        <%= link_to(content_item.title, content_item.base_path) %>

        <p><%= content_item.description %></p>
      </li>
    <% end %>
  </ul>
<% end %>
